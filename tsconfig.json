{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true, // Corrected this line
    "outDir": "dist", // Ensures output goes to the 'dist' folder,
    "target": "ESNext",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
